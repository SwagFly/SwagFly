
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/css/table.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/javascript/vue.js"></script>
    <script type="text/javascript"
            src="../../javascript/jquery.messager.js"></script>
    <script type="text/javascript" src="../../javascript/user_add.js"></script>
    <title>添加用户</title>
</head>
<body>
    <form method="post" action="success.html" id="form">
        <table width="100%">
            <tr>
                <td>
                    <font color="black">您正在做的业务是：人力资源--权限管理--添加用户</font>
                </td>
            </tr>
            <tr>
                <td align="right">
                    <input type="submit" value="保存" class="BUTTON_STYLE1" id="addUsers" />
                    <input type="button" value="返回" class="BUTTON_STYLE1"
                           onclick="history.back()">
                </td>
            </tr>
        </table>
        <table width="100%" border="1" cellpadding=3 cellspacing=1
               bordercolorlight=#848284 bordercolordark=#eeeeee
               class="TABLE_STYLE1">
            <tr>
                <td class="TD_STYLE1">用户名称</td>
                <td class="TD_STYLE2">
                    <input type="text" id="userName" name="users.userName" />
                </td>
                <td class="TD_STYLE1">用户密码</td>
                <td class="TD_STYLE2">
                    <input type="password" id="userPassword" name="users.userPassword" />
                </td>
            </tr>
            <tr>
                <td class="TD_STYLE1">真实姓名</td>
                <td class="TD_STYLE2">
                    <input type="text" id="userTrueName" name="users.userTrueName" />
                </td>
                <td class="TD_STYLE1">用户身份</td>
                <td class="TD_STYLE2" id="identity">
                <select name="users.sysRole.roleId">
                    <option v-for="(item,i) in nums" value="{{item.rid}}">
                    {{item.rname}}
                    </option>
                    @*<option value="1">人事专员</option>
                    <option value="2">人事经理</option>
                    <option value="3">薪酬专员</option>
                    <option value="4">薪酬经理</option>
                    <option value="5">招聘专员</option>
                    <option value="6">招聘经理</option>
                    <option value="7">应聘者</option>
                    <option value="8">系统管理员</option>*@
                </select>
                </td>
            </tr>
        </table>
    </form>
    <script type="text/javascript">
        $(function () {
            var vm = new Vue({
                el: "#identity",
                data: {
                    nums: null
                },
                methods: {
                    load: function () {
                        var t = this;
                        $.ajax({
                            url: "/User_controlController/GetOption",
                            type: "get",
                            success: function (msg) {
                                var dt = eval("(" + msg + ")");
                                t.nums = dt;
                            }
                        });
                    }
                }
            });
            vm.load();
            $(document).on("click", "#addUsers", function () {
                $.ajax({
                    url: "/User_controlController/Create",
                    type: "post",
                    data: "zhi=" + JSON.stringify("#form"),
                    success: function (msg) {
                        var result = eval("(" + msg + ")");
                        if (result > 0) {
                            alert('添加成功！');
                        }
                    }
                })
            });
        })
    </script>
</body>
</html>
