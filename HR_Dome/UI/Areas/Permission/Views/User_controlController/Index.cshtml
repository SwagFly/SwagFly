
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>用户管理</title>
    <link href="~/css/table.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/javascript/vue.js"></script>
    <script type="text/javascript">
        var currentPag = 1;
        var pages = 0;
        var vw;
        $(function () {
             vw= new Vue({
                el: "#bodyTable",
                data: {
                    nums: null,
                    vwPages: 0,
                    vwRows: 0,
                    vwCurrentPag: 0
                },
                methods: {
                    load: function () {
                        var t = this;
                        $.ajax({
                            url: "/User_controlController/Users",
                            type: "post",
                            data: "currentPage=" + currentPag,
                            success: function (msg) {
                                var dic = eval("("+msg+")");
                                t.nums = dic["data"];
                                t.vwCurrentPag = dic["page"].CurrentPage;
                                t.vwPages = dic["page"].Pages;
                                pages = t.vwPages;
                                t.vwRows = dic["page"].Rows;
                            }
                        })
                    }
                }
            });
            vw.load();
        });
        //首页
        $(document).on("click", "#firstPage", function () {
            if (currentPag == 1) {
                alert('抱歉，当前页已是首页！');
            } else {
                currentPag = 1;
                vw.load();
            }
        });
        //上一页
        $(document).on("click", "#topPage", function () {
            if (currentPag == 1) {
                alert('抱歉，当前页已是首页！');
            } else {
                currentPag --;
                vw.load();
            }
        });
        //下一页
        $(document).on("click", "#nextPage", function () {
            if (currentPag == pages) {
                alert('抱歉，当前页已是尾页！');
            } else {
                currentPag ++;
                vw.load();
            }
        });
        //尾页
        $(document).on("click", "#lastPage", function () {
            if (currentPag == pages) {
                alert('抱歉，当前页已是尾页！');
            } else {
                currentPag = pages;
                vw.load();
            }
        });
    </script>
</head>
<body>
    <div id="bodyTable">
        <table style="width:100%">
            <tr>
                <td>
                    <font color="black">您正在做的业务是：人力资源--权限管理--用户管理 </font>
                </td>
            </tr>
            <tr>
                <td>
                    当前角色总数：{{vwRows}}
                </td>
            </tr>
            <tr>
                <td align="right">
                    <input type="button" value="添加用户" class="BUTTON_STYLE1" onclick="location.href = 'Create'">
                </td>
            </tr>
        </table>
        <table width="100%" border="1" cellpadding=5 cellspacing=1
               bordercolorlight=#848284 bordercolordark=#eeeeee
               class="TABLE_STYLE1" id="Userstb">
            <tr class="TR_STYLE1">
                <td class="TD_STYLE1">
                    用户编号
                </td>
                <td class="TD_STYLE1">
                    用户名称
                </td>
                <td class="TD_STYLE1">
                    真实姓名
                </td>
                <td class="TD_STYLE1">
                    用户密码
                </td>
                <td class="TD_STYLE1">
                    用户身份
                </td>
                <td class="TD_STYLE1">
                    操作
                </td>
            </tr>
            <tr v-for="(item,i) in nums">
                <td>{{item.u_id}}</td>
                <td>{{item.u_name}}</td>
                <td>{{item.u_true_name}}</td>
                <td>{{item.u_password}}</td>
                <td>{{item.rname}}</td>
                <td>
                    <img src="../../images/bt_edit.gif" title="编辑" style="cursor:pointer;" onclick="location.href='user_edit.html'" />
                    <img src="../../images/bt_del.gif" title="删除" style="cursor:pointer;" onclick="return confirm('确定删除此用户吗？')" />
            </tr>

        </table>
        <p style="text-align:center;">
            <a id="firstPage" style="color:black;">首页</a>
            <a id="topPage" style="color:black;">上一页</a>
            <font color="red">{{vwCurrentPag}}</font>
            <a id="nextPage" style="color:black;">下一页</a>
            <a id="lastPage" style="color:black;">尾页</a>
        </p>
    </div>
</body>
</html>
